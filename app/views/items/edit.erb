<h1>Update Item</h1>
<br>
<form action="/items/<%= @item.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name: </label><br>
        <input type="text" name="item[name]" value="<%= @item.name %>"><br>
    <label>Category: </label><br>
        <input type="text" name="item[category]" value="<%= @item.category %>"><br>
    <label>Quantity: </label><br>
        <input type="text" name="item[quantity]" value="<%= @item.quantity %>"><br>
    <input type="submit" value="Update">
</form>


